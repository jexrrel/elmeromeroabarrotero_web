---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
---

<BaseLayout title="Contacto - El Mero Mero Abarrotero">
  <Header />
  <main class="py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-neutral-800 mb-4">Contacto</h1>
        <p class="text-xl text-neutral-600">Estamos aqu√≠ para ayudarle</p>
      </div>
      
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Informaci√≥n de contacto -->
        <div>
          <h2 class="text-2xl font-semibold text-neutral-800 mb-6">Informaci√≥n de Contacto</h2>
          <div class="space-y-6">
            <div class="flex items-start">
              <span class="text-2xl mr-4">üìß</span>
              <div>
                <p class="font-semibold text-lg">Email</p>
                <p class="text-neutral-600">info@elmeromero.com</p>
                <p class="text-neutral-500 text-sm">Respuesta en 24 horas</p>
              </div>
            </div>
            <div class="flex items-start">
              <span class="text-2xl mr-4">üìû</span>
              <div>
                <p class="font-semibold text-lg">Tel√©fono</p>
                <p class="text-neutral-600">+1 (555) 123-4567</p>
                <p class="text-neutral-500 text-sm">Lunes a Viernes 8:00 - 18:00</p>
              </div>
            </div>
            <div class="flex items-start">
              <span class="text-2xl mr-4">üìç</span>
              <div>
                <p class="font-semibold text-lg">Direcci√≥n</p>
                <p class="text-neutral-600">Calle Principal 123<br>Ciudad, Estado 12345</p>
                <p class="text-neutral-500 text-sm">Estacionamiento disponible</p>
              </div>
            </div>
            <div class="flex items-start">
              <span class="text-2xl mr-4">‚è∞</span>
              <div>
                <p class="font-semibold text-lg">Horarios</p>
                <p class="text-neutral-600">
                  Lunes - Viernes: 8:00 - 18:00<br>
                  S√°bados: 9:00 - 16:00<br>
                  Domingos: Cerrado
                </p>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Formulario de contacto -->
        <div>
          <h2 class="text-2xl font-semibold text-neutral-800 mb-6">Env√≠anos un mensaje</h2>
          <form class="space-y-6">
            <div>
              <label for="nombre" class="block text-sm font-medium text-neutral-700 mb-2">Nombre completo</label>
              <input 
                type="text" 
                id="nombre" 
                name="nombre" 
                class="w-full px-3 py-2 border border-neutral-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-400"
                required
              />
            </div>
            <div>
              <label for="email" class="block text-sm font-medium text-neutral-700 mb-2">Email</label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                class="w-full px-3 py-2 border border-neutral-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-400"
                required
              />
            </div>
            <div>
              <label for="telefono" class="block text-sm font-medium text-neutral-700 mb-2">Tel√©fono (opcional)</label>
              <input 
                type="tel" 
                id="telefono" 
                name="telefono" 
                class="w-full px-3 py-2 border border-neutral-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-400"
              />
            </div>
            <div>
              <label for="asunto" class="block text-sm font-medium text-neutral-700 mb-2">Asunto</label>
              <select 
                id="asunto" 
                name="asunto" 
                class="w-full px-3 py-2 border border-neutral-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-400"
              >
                <option value="">Selecciona un asunto</option>
                <option value="consulta">Consulta general</option>
                <option value="pedido">Realizar pedido</option>
                <option value="queja">Queja o sugerencia</option>
                <option value="otro">Otro</option>
              </select>
            </div>
            <div>
              <label for="mensaje" class="block text-sm font-medium text-neutral-700 mb-2">Mensaje</label>
              <textarea 
                id="mensaje" 
                name="mensaje" 
                rows="4" 
                class="w-full px-3 py-2 border border-neutral-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-400"
                placeholder="Cu√©ntenos c√≥mo podemos ayudarle..."
                required
              ></textarea>
            </div>
            <button 
              type="submit" 
              class="w-full bg-primary-400 text-white py-3 px-4 rounded-md hover:bg-primary-500 transition-colors font-medium"
            >
              Enviar Mensaje
            </button>
          </form>
        </div>
      </div>
    </div>
  </main>
  <Footer />
</BaseLayout>
